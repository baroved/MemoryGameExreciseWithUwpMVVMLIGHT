            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button IsEnabled="{Binding Buttons[0]}" CommandParameter="0" Style="{StaticResource style1}" Grid.Column="0" Grid.Row="0">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="{Binding Cards[0] ,Converter={StaticResource image}}"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
